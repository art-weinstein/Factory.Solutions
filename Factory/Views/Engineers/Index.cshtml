@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="jumobtron jumobtron=fluid">
  <h1>Engineers</h1>
</div>

@if (Model.Count == 0)
{
  <h3>No engineers have been hired yet!</h3>
}

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new{id =engineer.EngineerId})</li>
  }
</ul>
  <p class="btn btn-outline-dark">@Html.ActionLink("Hire an engineer", "Create")</p>
  <p class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</p>