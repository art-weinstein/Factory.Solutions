@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h3>Add a machine</h3>
<hr>

<h4>Add a machine @Html.DisplayNameFor(model => model.EngineerName): @Html.DisplayFor(model => model.EngineerName) for: </h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  <div class="form-group">
    @Html.Label("Select machine")
    @Html.DropDownList("MachineId", null, new {@class = "form-control"})
  </div>
  <br>
  <input type = "submit" value="Save" class = "btn btn-dark"/>
}
<br>
<p class="btn btn-outline-dark">@Html.ActionLink("Back to engineers", "Index")</p>
<p class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</p>