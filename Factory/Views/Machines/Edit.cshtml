@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3>Edit this machine: @Html.DisplayFor(model => model.MachineName)</h3>
<hr>

@using(Html.BeginForm())
{
  <div class = "form-group">
    @Html.HiddenFor(model => model.MachineId)
    <p>Machine @Html.LabelFor(model => model.MachineName)
    @Html.EditorFor(model => model.MachineName, new {@class = "form-control"})</p>
  </div>
  <input type="submit" value = "Save" class = "btn btn-primary" />
}
<br>
<p class="btn btn-dark">@Html.ActionLink("Back to machines", "Index")</p>
<p class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home")</p>