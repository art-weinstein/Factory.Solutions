@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="jumobtron jumobtron=fluid">
  <h1>Machines</h1>
</div>

@if (Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
}

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new{id =machine.MachineId})</li>
  }
</ul>
  <p class="btn btn-outline-dark">@Html.ActionLink("Add a new machine", "Create")</p>
  <p class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</p>